@page "/reports"
@page "/"
@attribute [StreamRendering]

@using WebApp.Api
@inject IReportsClient reportsClient;

<PageTitle>Reports</PageTitle>

<h1>Reports</h1>
@if (isLoading)
{
    <span>Loading...</span>
}
else if (isEmpty)
{
    <span>No reports available.</span>
} else
{
    <ReportTables Report="report" />
}
