<div class="report-table d-flex flex-row justify-content-center w-100 gap-4">
    <div class="@(Report.NewPositions.Count==0 ? "d-none":"d-box report-table__bg shadow-sm")">
    <h4 class="text-secondary fs-5 my-2">New positions</h4>
        <RadzenDataGrid Data="@Report.NewPositions" PagerPosition="PagerPosition.Top" AllowPaging="true" PageSize="10">
